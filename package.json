{
    "name": "slippi-scripts",
    "version": "1.0.0",
    "description": "A collection of Slippi scripts and other vaguely useful things",
    "dependencies": {
        "chalk": "^3.0.0",
        "chokidar": "^3.3.1",
        "electron": "^10.1.2",
        "elm": "^0.19.1-3",
        "elm-live": "^4.0.2",
        "formidable": "^1.2.2",
        "lodash": "^4.17.19",
        "multispinner": "^0.2.1",
        "node-wav-player": "^0.1.0",
        "obs-websocket-js": "^4.0.1",
        "ora": "^4.0.3",
        "slp-parser-js": "^4.1.0",
        "yargs": "^15.1.0"
    },
    "devDependencies": {
        "chokidar-cli": "^2.1.0",
        "mocha": "^8.1.3",
        "nodemon": "^2.0.4"
    },
    "scripts": {
        "play": "node scripts/playback.js play -c ../config.json",
        "record": "node scripts/playback.js record -c ../config.json",
        "elm": "elm make gui/Main.elm --output app/index.js --optimize || true",
        "elm:watch": "chokidar '**/*.elm' -c 'npm run elm'",
        "serve": "node src/server.js",
        "serve:watch": "nodemon src/server.js",
        "start": "npm run elm & npm run serve & electron app/main.js",
        "watch": "npm run elm & npm run elm:watch & npm run serve:watch & electron app/main.js true & wait",
        "test": "mocha"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/IvantheTricourne/slippi-scripts.git"
    },
    "keywords": [
        "Slippi",
        "SSBM",
        "JavaScript"
    ],
    "author": "Carl Factora",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/IvantheTricourne/slippi-scripts/issues"
    },
    "homepage": "https://github.com/IvantheTricourne/slippi-scripts#readme"
}
