{
    "name": "slippi-scripts",
    "version": "1.0.0",
    "description": "A collection of Slippi scripts and other vaguely useful things",
    "dependencies": {
        "@slippi/slippi-js": "^5.0.5",
        "electron": "^10.1.2",
        "elm": "^0.19.1-3",
        "elm-live": "^4.0.2",
        "formidable": "^1.2.2",
        "lodash": "^4.17.19"
    },
    "devDependencies": {
        "chokidar-cli": "^2.1.0",
        "mocha": "^8.1.3",
        "nodemon": "^2.0.4"
    },
    "scripts": {
        "elm": "elm make gui/Main.elm --output app/index.js --optimize || true",
        "elm:watch": "chokidar '**/*.elm' -c 'yarn run elm'",
        "serve:watch": "nodemon src/server.js",
        "start": "yarn run elm & electron app/main.js",
        "watch": "yarn run elm & yarn run elm:watch & yarn run serve:watch & electron app/main.js true & wait",
        "test": "mocha"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/IvantheTricourne/slippi-scripts.git"
    },
    "keywords": [
        "Slippi",
        "SSBM",
        "JavaScript"
    ],
    "author": "Carl Factora",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/IvantheTricourne/slippi-scripts/issues"
    },
    "homepage": "https://github.com/IvantheTricourne/slippi-scripts#readme"
}
